{
  "manifest_version": 2,
  "name": "Perplexity AI Automator",
  "version": "1.0.0",
  "description": "Automates running stored prompts sequentially on Perplexity.ai for enhanced workflow efficiency.",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "notifications",
    "nativeMessaging",
    "https://www.perplexity.ai/*"
  ],

  "host_permissions": [
    "https://api.emailjs.com/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Perplexity AI Automator",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    "popup.html",
    "popup.css",
    "popup.js",
    "lib/docx.min.js",
    "lib/html-docx.js",
    "prompt-manager.html",
    "prompt-manager.css",
    "prompt-manager.js",
    "emailjs-config.js"
  ],
  
  "author": "Developer",
  "homepage_url": "https://github.com/developer/perplexity-ai-automator",
  
  "applications": {
    "gecko": {
      "id": "developer@pivotpointinsights.ai",
      "strict_min_version": "57.0"
    }
  }
}